<nav><button class="home_btn"><a href="/">Home</a></button>
<button class="about_btn"><a href="/about">About</a></button>
<button class="new_event_btn"><a href="/events/new">Host A New Event</a></button>
</nav>

<main>

<h4><%= company["company"]%> events with loopd</h4>

<div class="company_grid">
    <% events.each do | event | %>
        <img src="<%= event["image_url"]%>" alt="">
        <p> <%= event["theme"]%></p>
        <p><%= event["event_type"]%></p>
        <p>Venue: <%= event["venue"]%></p>
        <p>Event Date: <%= event["event_date"]%></p>
        <p>Guests: <%= event["guests"]%> pax</p>
        <p>Budget: $ <%= event["budget"]%></p>
        <p><%= event["notes"]%></p>

        <% if event["event_date"] > Time.now.to_s %>
          <a href="/events/<%= event["id"]%>/edit"><i class="far fa-edit"></i></a>
        <% else %>
          <a href="/events/<%= event["id"]%>/edit"><i class="far fa-comment"></i></a>
        <% end %>

        <br>
        <br>
    <% end %>
</div>

</main>

