<% if logged_in? %>
    <p>Logged in as <%= current_company["company"]%></p>
    <p>Welcome <%= current_company["main_contact"]%></h3></p>
    <form action="/session" method="post">
      <input type="hidden" name="_method" value="delete">
      <button><i class="fas fa-sign-out-alt"></i></button>
      <a href="/dashboard"><i class="far fa-calendar-alt"></i></a>
    </form>
  <% end %>

  <%= yield %>

